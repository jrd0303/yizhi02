
/* 颜色变量定义 */
page {
  --primary-bg: #fff1cc; /* 页面主背景色 */
  --white: #ffffff; /* 白色 */
  --black: #000000; /* 黑色 */
  --gray: #cccccc; /* 灰色 */
  --light-gray: #a6a6a6; /* 浅灰色 */
  --text-primary: #333333; /* 主要文本颜色 */
  --text-secondary: #666666; /* 次要文本颜色 */
  --accent-color: #bf6a4b; /* 强调色 */
  
  width: 100vw;
  height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans',
    'Droid Sans', 'Helvetica Neue', 'Microsoft Yahei', sans-serif;
  background-color: var(--primary-bg);
}

/* 基础样式重置 */
view,
image,
text {
  box-sizing: border-box;
  flex-shrink: 0;
}

/* 通用页面样式 */
.page {
  background-color: var(--primary-bg);
  width: 100%;
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}

/* 通用组件样式 */
.section {
  background-color: var(--white);
  border-radius: 48.05rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.image-wrapper {
  padding: 20.59rpx 0;
  background-color: var(--white);
  border-radius: 51.49rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 字体样式 */
.font-primary {
  font-size: 41.19rpx;
  font-family: SourceHanSansCN;
  line-height: 38.07rpx;
  color: var(--text-primary);
}

.font-secondary {
  font-size: 34.32rpx;
  font-family: SourceHanSerifCN;
  line-height: 31.44rpx;
  color: var(--text-secondary);
}

.font-title {
  color: var(--black);
  font-size: 48.05rpx;
  font-family: HarmonyOSSansSC;
  font-weight: 900;
  line-height: 45.84rpx;
}

/* 分割线样式 */
.divider {
  background-color: var(--light-gray);
  height: 3.18rpx;
}

.divider-thin {
  background-color: rgba(0, 0, 0, 0.2);
  height: 1.74rpx;
}

