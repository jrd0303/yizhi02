.page {
  padding: 20rpx 20rpx 20rpx 20rpx;
  background-color: #fff1cc;
  width: 100%;
  overflow-y: hidden;
  overflow-x: hidden;
  height: 100%;
}
.image-wrapper {
  margin-right: 3.43rpx;
  padding: 20.59rpx;
  background-color: #ffffff;
  border-radius: 51.49rpx;
}

.search-input {
  flex: 1;
  margin-left: 20rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #333333;
}

.placeholder-style {
  color: #cccccc;
  font-size: 28rpx;
}
.image {
  margin-left: 41.19rpx;
  width: 60.07rpx;
  height: 60.07rpx;
}
.section {
  margin: 20rpx 10rpx 0 5rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  height: 250rpx;
  /* 艺术性边框效果 */
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 0 0 3rpx rgba(191, 106, 75, 0.8),
    0 0 20rpx rgba(191, 106, 75, 0.3),
    inset 0 0 0 2rpx rgba(255, 255, 255, 0.6);
  background-image: 
    linear-gradient(135deg, rgba(191, 106, 75, 0.1) 0%, rgba(255, 255, 255, 0) 50%),
    linear-gradient(45deg, rgba(255, 255, 255, 0) 50%, rgba(191, 106, 75, 0.1) 100%);
}
.image_2 {
  margin-top: 30rpx;
  overflow: hidden;
  width: 150rpx;
  height: 160rpx;
}
.group {
  margin-top: 40rpx;
  padding-left: 5.15rpx;
}
.group_2 {
  padding-left: 6.86rpx;
}
.text {
  color: #000000;
  font-size: 48.05rpx;
  font-family: HarmonyOSSansSC;
  font-weight: 900;
  line-height: 45.84rpx;
}
.text_2 {
  margin-top: 13.73rpx;
  color: rgba(191, 106, 75, 1);
  font-size: 41.19rpx;
  font-family: SourceHanSansCN;
  line-height: 38.07rpx;
}

.section_2 {
  flex: 0 0 auto;
  width: 317.51rpx; 
  margin: 0 12.5rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.section_2_img {
  width: 100%;
  height: 200rpx; /* 增加高度以容纳文字 */
  object-fit: cover; 
  background-color: #ffffff;
  padding-bottom: 30rpx; /* 底部留出10rpx空白 */
  box-sizing: border-box;
}

.section_2-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: rgba(255, 255, 255, 0.8); /* 半透明背景，增强文字可读性 */
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.style-button {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(191, 106, 75, 1);
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  width: 200rpx;
  height: 80rpx;
  position: relative;
  left: 270rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.style-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.style-button-text {
  color: #ffffff;
  font-size: 36rpx;
  font-family: HarmonyOSSansSC;
  font-weight: 600;
}

