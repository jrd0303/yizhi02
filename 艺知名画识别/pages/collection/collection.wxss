/* 导航项样式 */
.nav-item {
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  transition: background-color 0.3s;
}

.nav-item:hover {
  background-color: rgba(0, 0, 0, 0.05);
}
.text-wrapper {
  padding: 20.93rpx 0 31.4rpx;
  background: linear-gradient(135deg, #f4e668 0%, #fff9c4 33%, #ffebee 33%, #ffebee 66%, #e0f7fa 66%, #b3e8ef 100%);
  border-radius: 0rpx 0rpx 55.81rpx 55.81rpx;
  height: 90.7rpx;
  position: relative;
  overflow: hidden;
  /* 堆叠效果 */
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05),
              0 4rpx 12rpx rgba(0, 0, 0, 0.08),
              inset 0 1rpx 3rpx rgba(255, 255, 255, 0.8),
              inset 0 -1rpx 3rpx rgba(0, 0, 0, 0.05);
  transform: translateY(-1rpx);
}

.text-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(255,255,255,0.3) 100%);
  z-index: 1;
}
