/* 调整行容器样式，确保图片排列正确 */
/* 调整图片容器样式 - 去除底部margin减少上下空白 */
.image-container {
  width: 45%;
  margin: 0 10rpx 10rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.art-image {
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #f5f5f5;
  display: block;
}

.image-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 0 10rpx;
  margin-top: 20rpx;
}

.image-info {
  height: 100rpx;
  padding: 15rpx;
  background-color: #ffffff;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-top: -2rpx; 
  box-sizing: border-box;
}

.image-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.image-author {
  font-size: 22rpx;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 5rpx;
}