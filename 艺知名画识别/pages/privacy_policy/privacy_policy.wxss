/* 页面基础样式 */
.page {
  background-color: #fff1cc;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  background-color: #ffd700;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  font-family: SourceHanSansCN;
}

.header-right {
  width: 80rpx;
}

/* 内容容器 */
.content-container {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 政策标题样式 */
.policy-title {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.title-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  font-family: SourceHanSansCN;
  display: block;
  margin-bottom: 15rpx;
}

.date-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

/* 章节样式 */
.section {
  margin-bottom: 40rpx;
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  font-family: SourceHanSansCN;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 子章节样式 */
.subsection {
  margin-bottom: 25rpx;
}

.subsection-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #444;
  font-family: SourceHanSansCN;
  margin: 20rpx 0 15rpx 0;
}

/* 段落样式 */
.paragraph {
  font-size: 28rpx;
  color: #555;
  font-family: SourceHanSansCN;
  line-height: 48rpx;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
}

/* 列表项样式 */
.list-item {
  margin-bottom: 25rpx;
}

.list-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #444;
  font-family: SourceHanSansCN;
  line-height: 48rpx;
}

.list-content {
  font-size: 28rpx;
  color: #555;
  font-family: SourceHanSansCN;
  line-height: 48rpx;
  display: block;
  margin-left: 0;
  padding-left: 0;
  letter-spacing: 0.5rpx;
}

/* 滚动条样式 */
.content-container::-webkit-scrollbar {
  width: 8rpx;
}

.content-container::-webkit-scrollbar-track {
  background-color: #f1f1f1;
  border-radius: 4rpx;
}

.content-container::-webkit-scrollbar-thumb {
  background-color: #c1c1c1;
  border-radius: 4rpx;
}

.content-container::-webkit-scrollbar-thumb:hover {
  background-color: #a8a8a8;
}